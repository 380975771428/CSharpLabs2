<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].RentalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].DateIssue)
